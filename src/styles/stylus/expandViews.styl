/* Buttons */
.vz-expander-header {
    border-top: 4px outset transparent;
    height: auto;
    z-index: 1;
    top: -2px;
    position: absolute;
    width: 100%;
    display: flex;
    justify-content: center;
    pointer-events: none;

    &:hover {
        pointer-events: auto;

        > div {
            top: 0;
            opacity: 1;
            max-width: 100px;
            box-shadow: var(--cubiq-accent-light) 0px -5px 15px;

            span {
                opacity: 1;
            }
        }
    }

    > div {
        pointer-events: auto;
        opacity: 0.3;
        background-color: var(--cubiq-accent-light) !important;
        transition-property: opacity, inset, max-width, box-shadow;
        transition-duration: 0.3s, 0.3s, 0.5s;
        transition-delay: 0.2s, 0.2s, 0.5s;
        height: 1em;
        overflow: hidden;
        max-width: 1em;
        border-radius: 1em;
        top: -0.8em;
        overflow: hidden;

        span {
            opacity: 0;
            font-size: 1rem;
            width: 1em;
            height: 1em;
            z-index: 1;
            left: -0.8em;
            transition-property: opacity, filter, transform;
            transition-duration: 0.3s, 0.3s, 0.5s;
            transition-delay: 0.6s, 0s, 0.3s;
            filter: opacity(0.3);
            background-color: var(--cubiq-primary-text1color);
            mask-size: 100% 100%;

            &:hover {
                filter: opacity(1);
            }
        }
    }

    .vz-xpand-left {
        mask-image: var(--icon-expand-left);
    }

    .vz-xpand-right {
        mask-image: var(--icon-expand-right);
    }
}

.vz-expanded-left .vz-xpand-left, 
.vz-expanded-right .vz-xpand-right {
    transform: scaleX(-1);
}

/* Expands */
.vz-animation {
    transition: all 0.5s !important;
    z-index: 10;
}

#root #editor-base .mosaic-root {
    > .vz-expanded-right {
        right: 0 !important;
        z-index: 10;
    }

    > .vz-expanded-left {
        left: 0 !important;
        z-index: 2;
    }

    // play panel
    // incredible modern css selector
    > div:nth-child(4 of .mosaic-tile) {
        z-index: 90;
    }
}
